generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  username  String    @unique
  email     String    @unique
  password  String
  content   Content[]
  link      Link[]
  createdAt DateTime  @default(now())
}

