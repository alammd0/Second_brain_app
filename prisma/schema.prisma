model Content {
  id          String   @id @default(cuid())
  title       String
  description String?
  Url         String
  contentType String
  userid      String
  tags        Tag[]    @relation("contentTags")
  createdAt   DateTime @default(now())
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Tag {
  id       String    @id @default(cuid())
  name     String  
  contents Content[] @relation("contentTags")
}

model Link {
  id        String   @id @default(cuid())
  hash      String
  contentid String
  user      User     @relation(fields: [contentid], references: [id])
  createdAt DateTime @default(now())
}

enum Type {
  Document
  Twitter
  Youtube
  Instagram
}
